<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ln_item_blog"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ItemFragment">
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="11dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:padding="15sp"
            android:background="@drawable/card_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:singleLine="true"
                android:gravity="center"
                android:id="@+id/title_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fried Halloumi"
                android:textStyle="bold"
                android:textColor="#373b54"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="5dp"
                android:id="@+id/imv_cover"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/fried_halloumi" />
            <RatingBar
                android:id="@+id/ratingbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:scaleX=".5"
                android:scaleY=".5"
                android:stepSize="0.1"
                android:rating="5"
                android:theme="@style/ratingbar"/>

            <TextView
                android:gravity="center"
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="No need to cook anything today. Just choose the ingredients you have and get the recipe inspiration!..."
                android:maxLines="3"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textColor="#E82113"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp" />
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="40.0"
                    android:textColor="#373b54"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:padding="3dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_shopping_cart"
                    app:tint="@color/orange"
                    android:id="@+id/imv_love"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/favourite"
                    android:layout_weight="1"
                    app:tint="@color/orange"
                    android:id="@+id/imv_love"/>
                <ImageView
                    android:id="@+id/imv_zalo"
                    android:layout_margin="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_zalo"
                    android:layout_weight="1"/>
               <!-- <ImageView
                    app:tint="@color/white"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_shopping_cart"/>
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tv_add_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="ADD"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    />-->


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>