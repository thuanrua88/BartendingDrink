<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/search_bg"
    android:layout_marginTop="16dp"
    android:elevation="3dp"
    tools:context=".ViewHolderCardFragment">

    <ImageView
        android:id="@+id/imv_cover"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@drawable/recipes"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_title_food"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Cake Marbella"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/imv_cover"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_desc_food"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Cras blardit consecuat sapen ut cursus"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/imv_cover"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_food" />

    <TextView
        android:id="@+id/tv_total_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$2.13"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/layout_red"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginTop="18dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/orange_button_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_total_food">

        <TextView
            android:id="@+id/imv_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@drawable/card_background"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/imv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>